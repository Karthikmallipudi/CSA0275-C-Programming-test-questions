#include <stdio.h>

int main() {
    // Declare variables
    float height;

    // Input the height
    printf("Enter the height (in centimeters): ");
    scanf("%f", &height);

    // Categorize the person based on height
    if (height < 150.0) {
        printf("The person is categorized as a dwarf.\n");
    } else if (height >= 150.0 && height <= 180.0) {
        printf("The person is categorized as of average height.\n");
    } else {
        printf("The person is categorized as taller.\n");
    }

    return 0;
}
